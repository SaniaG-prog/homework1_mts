<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movie_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_movie_guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_for_item_movie" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_movie_guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guideline_for_item_movie" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_movie_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_for_item_movie_poster"
        app:layout_constraintEnd_toStartOf="@+id/item_movie_guideline_right"
        app:layout_constraintStart_toStartOf="@+id/item_movie_guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="2">

        <ImageView
            android:id="@+id/item_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_for_item_movie_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_for_item_movie_name"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/item_movie_guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_card_view"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/item_movie_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_for_item_movie_description"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_for_item_movie_description"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/item_movie_guideline_right"
        app:layout_constraintStart_toStartOf="@+id/item_movie_guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_name"
        app:layout_constraintVertical_weight="1" />

    <RatingBar
        android:id="@+id/item_movie_rating_bar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_for_item_movie_rating_bar"
        android:layout_marginBottom="@dimen/margin_bottom_for_rating_bar_and_age_in_item_movie"
        android:isIndicator="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_movie_guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_name"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/item_movie_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_for_item_movie_age"
        android:layout_marginBottom="@dimen/margin_bottom_for_rating_bar_and_age_in_item_movie"
        android:background="@drawable/frame_for_text_age_limit"
        android:padding="@dimen/padding_for_item_movie_age"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_for_item_movie_age"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_movie_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_name"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>